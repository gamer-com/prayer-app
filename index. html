    <script>
        // PWA Variables
        let deferredPrompt;
        let isStandalone = window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone;

        // Navigation functionality
        function showSection(sectionName) {
            const sections = document.querySelectorAll('.section-content');
            sections.forEach(section => {
                section.classList.remove('active');
            });
            
            document.getElementById(sectionName).classList.add('active');
            
            const navButtons = document.querySelectorAll('.nav-btn');
            navButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Clock functionality
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('ar-SA', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
            const dateString = now.toLocaleDateString('ar-SA', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            document.getElementById('current-time').innerHTML = 
                '<div>' + timeString + '</div>' +
                '<div class="date">' + dateString + '</div>';
            
            const currentHour = now.getHours();
            const currentMinute = now.getMinutes();
            const currentTime = currentHour * 60 + currentMinute;
            
            const prayers = [
                { name: 'الفجر', time: 5 * 60 + 30 },
                { name: 'الظهر', time: 12 * 60 + 15 },
                { name: 'العصر', time: 15 * 60 + 45 },
                { name: 'المغرب', time: 18 * 60 + 20 },
                { name: 'العشاء', time: 19 * 60 + 45 }
            ];
            
            let nextPrayer = prayers.find(function(prayer) {
                return prayer.time > currentTime;
            });
            
            if (!nextPrayer) {
                nextPrayer = prayers[0];
            }
            
            const timeUntil = nextPrayer.time > currentTime ? 
                nextPrayer.time - currentTime : 
                (24 * 60) - currentTime + nextPrayer.time;
            
            const hoursUntil = Math.floor(timeUntil / 60);
            const minutesUntil = timeUntil % 60;
            
            document.getElementById('next-prayer').innerHTML = 
                'الصلاة القادمة: <strong>' + nextPrayer.name + '</strong><br>' +
                '<small>خلال ' + hoursUntil + ' ساعة و ' + minutesUntil + ' دقيقة</small>';
        }

        // Sound settings
        let soundEnabled = true;
        let audioContext;

        function initializeAudio() {
            try {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
            } catch (e) {
                console.log('Web Audio API not supported');
            }
        }

        function playPrayerSound() {
            if (!soundEnabled || !audioContext) return;
            
            const notes = [
                { freq: 523.25, duration: 0.5 },
                { freq: 587.33, duration: 0.5 },
                { freq: 659.25, duration: 0.8 },
                { freq: 587.33, duration: 0.3 },
                { freq: 523.25, duration: 1.0 },
                { freq: 659.25, duration: 0.5 },
                { freq: 698.46, duration: 0.5 },
                { freq: 783.99, duration: 1.2 }
            ];
            
            let currentTime = audioContext.currentTime;
            
            notes.forEach(function(note) {
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(note.freq, currentTime);
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0, currentTime);
                gainNode.gain.linearRampToValueAtTime(0.3, currentTime + 0.1);
                gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + note.duration);
                
                oscillator.start(currentTime);
                oscillator.stop(currentTime + note.duration);
                
                currentTime += note.duration;
            });
        }

        function toggleSound() {
            soundEnabled = !soundEnabled;
            const button = document.getElementById('sound-toggle');
            button.textContent = soundEnabled ? '🔊 إيقاف الصوت' : '🔇 تشغيل الصوت';
            button.style.background = soundEnabled ? '#4A7C59' : '#666';
            
            if (typeof(Storage) !== "undefined") {
                localStorage.setItem('prayerSoundEnabled', soundEnabled);
            }
        }

        function checkPrayerTime() {
            const now = new Date();
            const currentHour = now.getHours();
            const currentMinute = now.getMinutes();
            
            const prayers = [
                { name: 'الفجر', hour: 5, minute: 30 },
                { name: 'الظهر', hour: 12, minute: 15 },
                { name: 'العصر', hour: 15, minute: 45 },
                { name: 'المغرب', hour: 18, minute: 20 },
                { name: 'العشاء', hour: 19, minute: 45 }
            ];
            
            prayers.forEach(function(prayer) {
                if (currentHour === prayer.hour && currentMinute === prayer.minute) {
                    showPrayerNotification(prayer.name);
                    playPrayerSound();
                }
            });
        }

        function showPrayerNotification(prayerName) {
            const notification = document.createElement('div');
            notification.style.cssText = 
                'position: fixed; top: 20px; left: 50%; transform: translateX(-50%); ' +
                'background: #2D5729; color: white; padding: 1rem 1.5rem; ' +
                'border-radius: 0.5rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); ' +
                'z-index: 1000; text-align: center; animation: bounce 1s infinite;';
            
            notification.innerHTML = 
                '<div style="font-size: 1.125rem; font-weight: bold;">🕌 حان وقت ' + prayerName + '</div>' +
                '<div style="font-size: 0.875rem;">حي على الصلاة، حي على الفلاح</div>';
            
            document.body.appendChild(notification);
            
            setTimeout(function() {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }

        // App sharing functions
        function copyAppLink() {
            const appLink = window.location.href;
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(appLink).then(function() {
                    showCopySuccess();
                }).catch(function() {
                    fallbackCopyTextToClipboard(appLink);
                });
            } else {
                fallbackCopyTextToClipboard(appLink);
            }
        }

        function fallbackCopyTextToClipboard(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                document.execCommand('copy');
                showCopySuccess();
            } catch (err) {
                console.error('Fallback: Oops, unable to copy', err);
            }
            
            document.body.removeChild(textArea);
        }

        function showCopySuccess() {
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = '✅ تم النسخ!';
            button.style.background = '#4A7C59';
            setTimeout(function() {
                button.textContent = originalText;
                button.style.background = '#D4AF37';
            }, 2000);
        }

        function shareApp() {
            const appLink = window.location.href;
            const shareText = 'تطبيق بر الوالدين الرابع - تطبيق ديني شامل للأذكار ومواقيت الصلاة';
            
            if (navigator.share) {
                navigator.share({
                    title: 'تطبيق بر الوالدين الرابع',
                    text: shareText,
                    url: appLink
                }).catch(function(error) {
                    console.log('Error sharing:', error);
                });
            } else {
                const fullText = shareText + '\n' + appLink;
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(fullText).then(function() {
                        const button = event.target;
                        const originalText = button.textContent;
                        button.textContent = '✅ تم النسخ للمشاركة!';
                        button.style.background = '#4A7C59';
                        setTimeout(function() {
                            button.textContent = originalText;
                            button.style.background = 'rgba(255,255,255,0.2)';
                        }, 2000);
                    });
                } else {
                    fallbackCopyTextToClipboard(fullText);
                }
            }
        }

        // PWA Install functionality
        function installApp() {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then(function(choiceResult) {
                    if (choiceResult.outcome === 'accepted') {
                        console.log('User accepted the install prompt');
                        hideInstallBanner();
                    }
                    deferredPrompt = null;
                });
            }
        }

        function hideInstallBanner() {
            const banner = document.getElementById('install-banner');
            const header = document.getElementById('header');
            banner.classList.remove('show');
            header.classList.remove('with-banner');
            if (typeof(Storage) !== "undefined") {
                localStorage.setItem('installBannerDismissed', 'true');
            }
        }

        function showInstallBanner() {
            const banner = document.getElementById('install-banner');
            const header = document.getElementById('header');
            banner.classList.add('show');
            header.classList.add('with-banner');
        }

        // Network status
        function updateNetworkStatus() {
            const indicator = document.getElementById('offline-indicator');
            
            if (navigator.onLine) {
                indicator.textContent = '🌐 متصل بالإنترنت';
                indicator.classList.add('online-indicator');
                indicator.classList.remove('show');
            } else {
                indicator.textContent = '📶 لا يوجد اتصال بالإنترنت - التطبيق يعمل بوضع بدون إنترنت';
                indicator.classList.remove('online-indicator');
                indicator.classList.add('show');
            }
        }

        // Service Worker Registration
        function registerServiceWorker() {
            if ('serviceWorker' in navigator) {
                const swCode = `
                    const CACHE_NAME = 'prayer-app-v1';
                    const urlsToCache = [
                        '/',
                        '/index.html'
                    ];

                    self.addEventListener('install', function(event) {
                        event.waitUntil(
                            caches.open(CACHE_NAME)
                                .then(function(cache) {
                                    return cache.addAll(urlsToCache);
                                })
                        );
                    });

                    self.addEventListener('fetch', function(event) {
                        event.respondWith(
                            caches.match(event.request)
                                .then(function(response) {
                                    if (response) {
                                        return response;
                                    }
                                    return fetch(event.request);
                                }
                            )
                        );
                    });
                `;
                
                const blob = new Blob([swCode], { type: 'application/javascript' });
                const swUrl = URL.createObjectURL(blob);
                
                navigator.serviceWorker.register(swUrl)
                    .then(function(registration) {
                        console.log('ServiceWorker registration successful');
                    })
                    .catch(function(err) {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            }
        }

        // Initialize everything
        document.addEventListener('DOMContentLoaded', function() {
            updateTime();
            setInterval(updateTime, 1000);
            setInterval(checkPrayerTime, 60000);
            
            // Initialize audio on user interaction
            document.addEventListener('click', function() {
                if (!audioContext) {
                    initializeAudio();
                }
            });
            
            // Load preferences
            if (typeof(Storage) !== "undefined") {
                const savedSoundSetting = localStorage.getItem('prayerSoundEnabled');
                if (savedSoundSetting !== null) {
                    soundEnabled = savedSoundSetting === 'true';
                    const button = document.getElementById('sound-toggle');
                    button.textContent = soundEnabled ? '🔊 إيقاف الصوت' : '🔇 تشغيل الصوت';
                    button.style.background = soundEnabled ? '#4A7C59' : '#666';
                }

                // Check install banner
                const bannerDismissed = localStorage.getItem('installBannerDismissed');
                if (!bannerDismissed && !isStandalone && window.location.protocol === 'https:') {
                    setTimeout(showInstallBanner, 2000);
                }
            }
            
            // Set app link
            document.getElementById('app-link').textContent = window.location.href;
            
            // Network status
            updateNetworkStatus();
            window.addEventListener('online', updateNetworkStatus);
            window.addEventListener('offline', updateNetworkStatus);
            
            // Register service worker
            registerServiceWorker();
        });

        // PWA Install prompt
        window.addEventListener('beforeinstallprompt', function(e) {
            e.preventDefault();
            deferredPrompt = e;
            
            if (!isStandalone && typeof(Storage) !== "undefined") {
                const bannerDismissed = localStorage.getItem('installBannerDismissed');
                if (!bannerDismissed) {
                    showInstallBanner();
                }
            }
        });

        // App installed
        window.addEventListener('appinstalled', function(evt) {
            console.log('App was installed.');
            hideInstallBan
